<h3>{{viewTitle}}</h3>

<form action="/guest" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{guest._id}}">
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>성별</label>
            <input type="text" class="form-control" name="gender" placeholder="성별" value="{{guest.gender}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> 입력</button>
        <a class="btn btn-secondary" href="/guest/list"><i class="fa fa-list-alt"></i> 목록</a>
    </div>
</form>